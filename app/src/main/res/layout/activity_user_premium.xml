<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".UserLocation"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linlay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="60dp">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <Button
        android:id="@+id/endLoct"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/linlay1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-52dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="sans-serif-medium"
        android:text="Finish"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAlignment="gravity"/>

    <Button
        android:id="@+id/chooseMapL"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/linlay1"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-52dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="sans-serif-medium"
        android:text="Choose Map"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAlignment="gravity"/>

    <Button
        android:id="@+id/getLoc"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/linlay1"
        android:layout_toLeftOf="@id/chooseMapL"
        android:layout_marginBottom="-52dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="sans-serif-medium"
        android:text="Calculate"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAlignment="gravity"/>

    <Button
        android:id="@+id/getPos"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/linlay1"
        android:layout_toRightOf="@id/endLoct"
        android:layout_marginBottom="-52dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="sans-serif-medium"
        android:text="Locate Me"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAlignment="gravity"
        android:visibility="invisible"/>


</RelativeLayout>